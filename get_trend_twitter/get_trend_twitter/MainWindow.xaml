<Window x:Class="get_trend_twitter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:get_trend_twitter"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="960">
    
    <Grid>
        
        <Grid Margin="0,0,0,409">
            <Label x:Name="Title" Content="trend"  Panel.ZIndex="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="36" FontWeight="Bold" Height="100" VerticalAlignment="Top"/>
        </Grid>
        
        <Grid x:Name="GoogleTrend" Margin="0,105,476,0">
            <TabControl>
                <TabItem Header="Ranking">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Browser">
                    <Grid x:Name="TrendBrowser">
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        
        <Grid x:Name="TwitterTrend" Margin="476,105,0,0"/>
        
    </Grid>
</Window>
